# @category Database
# Takes an Object //o// and a template Object of the same type and computes or deletes properties so that they have the same list of known properties.
# (This is just a quick and dirty solution for this until Eugen makes a fast and efficient one ;-).)
# @param Object o
# @param Object template
# @param RuleChain schedule (optional)
user_function copy_properties_db {
	my $o = shift;
	my $t = shift;


	# TODO: check that $o and $t are of compatible types

	my @p = $t->list_properties;
		
	my $sched;
	if (@_) {
		$sched = shift;
	} else {
		$sched = $o->get_schedule($t->list_properties);
	}

	$sched->apply($o);
	
	my @q = $o->list_properties;
	
	my $sp = new Set<String>(@p);
	my $sq = new Set<String>(@q);
	
	my $s = $sq-$sp;
	
	foreach (@$s) {
		$o->remove($_);
	}

}
