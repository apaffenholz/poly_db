use application 'polytope';

sub batch_insert {
	my $db_name = shift;
	my $collection = shift;
	my $contrib = shift;
	my $local = shift;
	my $nonew = shift;
	my $u = shift;
	my $p = shift;
	my $md = shift;
	
	my @files = @_;

	print "db_name: $db_name\ncollection: $collection\ncontrib: $contrib\nmove_dir: $md\nfiles:\n".join(' ',@files)."\n";
	
	poly_db_batch_insert(\@files, $db_name, $collection, $contrib, local=>$local, nonew=>$nonew, username=>$u, password=>$p, move_dir => $md);
}

batch_insert(@ARGV);
