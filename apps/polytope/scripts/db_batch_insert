use application 'polytope';

sub batch_insert {
	my $db_name = shift;
	my $collection = shift;
	my $contrib = shift;
	my $local = shift;
	my $nonew = shift;
	
	my @files = @_;
	
	my @c = get_credentials();
	my $fst = load($files[0]);
	
	my $temp = get_template_object($db_name, $collection, local=>$local);
	
	my $sched = $fst->get_schedule($temp->list_properties);

	foreach (@files) {
		my $obj = load($_);
		copy_properties_db($obj, $temp, schedule=>$sched, nonew=>$nonew);
	}


	my $client = get_client($local, $c[0], $c[1]);	
	my $col = get_collection($client, $db_name, $collection);
	
	foreach (@files) {
		my $obj = load($_);
		my $id = $obj->name;
		
		my $json = pm2json($obj, $id, $contrib);
		print $col->insert($json);
		print " ";
	}
}

batch_insert(@ARGV);