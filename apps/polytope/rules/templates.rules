# @category Database
# Sets the template object for the collection //col// of the database //db//.
# @param obj Core::Object
# @param String db database name
# @param String col collection name
# @param String username optional
# @param String password optional
user_function set_template_object {
	my ($obj, $db, $col, $u, $p) = @_;

	my $client = MongoDB::MongoClient->new;	
#	my $client = MongoDB::MongoClient->new(host=>$db_host.":".$db_port, db_name=>$auth_db, username=>$u, password=>$p);
		
	my $tdb = $client->get_database($type_db);
	my $tcol = $tdb->get_collection("Types");

	$tcol->update({'db'=>$db, 'col'=>$col}, {'$set' => {'template' => pm2temp($obj)} });
}


# @category Database
# Sets the template object for the collection //col// of the database //db//.
# @param String db database name
# @param String col collection name
# @param Bool local
# @return Core::Object
user_function get_template_object {
	my ($db, $col, $local) = @_;

	my $client = get_client($local);
		
	my $tcol = $client->get_database($type_db)->get_collection("Types");

	my $doc = $tcol->find({db => $db, col => $col})->next;
	
	my $r = cursor2type($doc->{'template'}, $doc);
	
	# TODO: this is stupid -- somehow these properties appear upon creating the polytope from the retrieved data
	$r->remove("AFFINE_HULL"); $r->remove("LINEALITY_SPACE"); $r->remove("FEASIBLE");
	
	return $r;
}